@model IEnumerable<BlogMvc.ViewModels.AutorEstatisticaViewModel>

@{
    ViewData["Title"] = "Estatísticas por Autor";
}

<div class="text-center">
    <h1 class="display-4">@ViewData["Title"]</h1>
    <p>Contagem total de posts por autor.</p>
</div>

<div class="container mt-5">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <ul class="list-group shadow-sm">
                @foreach (var item in Model)
                {
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <strong>@item.NomeAutor</strong>
                        <span class="badge bg-primary rounded-pill" style="font-size: 1rem;">
                            @item.ContagemPosts
                        </span>
                    </li>
                }
            </ul>
        </div>
    </div>
</div>
