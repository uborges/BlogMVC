@model IEnumerable<BlogMvc.ViewModels.AutorEstatisticaViewModel>

@{
    ViewData["Title"] = "Autores Prolíficos";
    // Recupera os valores atuais ou usa um valor padrão para o formulário
    var anoAtual = (int)ViewData["Ano"];
    var limiteAtual = (int)ViewData["Limite"];
}

<div class="text-center">
    <h1 class="display-4">@ViewData["Title"]</h1>
    <p>
        Autores que publicaram mais de @ViewData["Limite"] post(s) no ano de @ViewData["Ano"].
    </p>
</div>

<div class="container mt-4 mb-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">Filtrar Autores</h5>
                </div>
                <div class="card-body">
                    <form asp-controller="Posts" asp-action="AutoresProlificos" method="get" class="row g-3">
                        <div class="col-md-6">
                            <label for="anoReferencia" class="form-label">Ano de Referência</label>
                            <input type="number" class="form-control" id="anoReferencia" name="anoReferencia" value="@anoAtual" min="1900" max="@DateTime.Now.Year" required>
                        </div>
                        <div class="col-md-6">
                            <label for="limitePosts" class="form-label">Mínimo de Posts</label>
                            <input type="number" class="form-control" id="limitePosts" name="limitePosts" value="@limiteAtual" min="1" required>
                        </div>
                        <div class="col-12 text-end">
                            <button type="submit" class="btn btn-primary">Aplicar Filtro</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container mt-5">
    <div class="row">
        <div class="col-md-8 offset-md-2">

            @if (!Model.Any())
            {
                <div class="alert alert-warning text-center">
                    Nenhum autor atende a este critério.
                </div>
            }
            else
            {
                <ul class="list-group shadow-sm">
                    @foreach (var item in Model)
                    {
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <strong>@item.NomeAutor</strong>
                            <span class="badge bg-success rounded-pill" style="font-size: 1rem;">
                                @item.ContagemPosts post(s)
                            </span>
                        </li>
                    }
                </ul>
            }
        </div>
    </div>
</div>
