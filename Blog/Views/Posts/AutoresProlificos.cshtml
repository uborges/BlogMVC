@model IEnumerable<BlogMvc.ViewModels.AutorEstatisticaViewModel>

@{
    ViewData["Title"] = "Autores Prolíficos";
}

<div class="text-center">
    <h1 class="display-4">@ViewData["Title"]</h1>
    <p>
        Autores que publicaram mais de @ViewData["Limite"] post(s) no ano de @ViewData["Ano"].
    </p>
</div>

<div class="container mt-5">
    <div class="row">
        <div class="col-md-6 offset-md-3">

            @if (!Model.Any())
            {
                <div class="alert alert-warning text-center">
                    Nenhum autor atende a este critério.
                </div>
            }
            else
            {
                <ul class="list-group shadow-sm">
                    @foreach (var item in Model)
                    {
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <strong>@item.NomeAutor</strong>
                            <span class="badge bg-success rounded-pill" style="font-size: 1rem;">
                                @item.ContagemPosts post(s)
                            </span>
                        </li>
                    }
                </ul>
            }
        </div>
    </div>
</div>
